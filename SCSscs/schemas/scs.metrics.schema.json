{
  "$id": "https://ellocello.com/scs.metrics.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCS Metrics (v0.1)",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "session_id": { "type": "string" },
    "user_id_hash": { "type": "string", "description": "Anonymized user hash" },
    "model": { "type": "string" },
    "tokens_in": { "type": "integer", "minimum": 0 },
    "tokens_out": { "type": "integer", "minimum": 0 },
    "messages": { "type": "integer", "minimum": 0 },
    "snr": { "type": "number", "minimum": 0, "maximum": 1 },
    "prompt_complexity": { "type": "number", "minimum": 0 },
    "session_depth": { "type": "number", "minimum": 0 },
    "cross_thread_refs": { "type": "integer", "minimum": 0 },
    "sig_drift_points": { "type": "integer", "minimum": 0 },
    "ghost_tokens": { "type": "integer", "minimum": 0 },
    "notes": { "type": "string" }
  },
  "required": [
    "timestamp",
    "session_id",
    "model",
    "tokens_in",
    "tokens_out",
    "messages",
    "snr",
    "prompt_complexity",
    "session_depth"
  ]
}
